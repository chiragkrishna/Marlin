@echo off

echo Building marlin for Ender 3
git checkout "Ender-3(2.0.x)"
git pull
python3.8 buildroot/share/vscode/auto_build.py build
echo build complete for ender 3-2.0.x
cp .pio/build/LPC1769/firmware.bin ~/Desktop/Ender3-2.0.x.bin

git checkout "Ender-3(Bugfix)"
git pull
python3.8 buildroot/share/vscode/auto_build.py build
echo build complete for ender 3-Bugfix
cp .pio/build/LPC1769/firmware.bin ~/Desktop/Ender3-Bugfix.bin

echo Building marlin for Ender 5
git checkout "Ender-5(2.0.x)"
git pull
python3.8 buildroot/share/vscode/auto_build.py build
echo build complete for ender 5-2.0.x
cp .pio/build/LPC1769/firmware.bin ~/Desktop/Ender5-2.0.x.bin

git checkout "Ender-5(Bugfix)"
git pull
python3.8 buildroot/share/vscode/auto_build.py build
echo build complete for ender 3-Bugfix
cp .pio/build/LPC1769/firmware.bin ~/Desktop/Ender5-Bugfix.bin

cls

echo firmware ready on desktop
